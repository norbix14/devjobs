{{!-- Mostrar todos los candidatos de una vacante --}}
<main class="candidatos">
	{{#if candidatos.length}}
		<h2>Lista de candidatos</h2>
		{{#each candidatos}}
			<div class="candidato">
				<div class="caja">
					<p class="etiqueta">Nombre</p>
					<p class="nombre">{{nombre}}</p>
				</div>
				<div class="caja">
					<p class="etiqueta">Email</p>
					<p class="nombre">{{email}}</p>
				</div>
				<div class="caja">
					<a href="/uploads/cv/{{cv}}" class="btn btn-verde" 
					   target="_blank">Ver CV</a>
				</div>
			</div>
		{{/each}}
	{{else}}
		<h2>AÃºn no hay candidatos para esta vacante</h2>
	{{/if}}
</main>