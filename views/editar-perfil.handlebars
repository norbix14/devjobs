{{!-- Formulario para editar perfil de usuario --}}
<main class="contenedor">
	<form action="/editar-perfil" method="post" class="default-form">
		<div class="campo">
			<label>Nombre</label>
			<input type="text" name="nombre" placeholder="Tu nombre" 
				   required autofocus value="{{usuario.nombre}}">
		</div>
		<div class="campo">
			<label>Email</label>
			<input type="email" name="email" placeholder="Tu email" 
				   required value="{{usuario.email}}">
		</div>
		<div class="campo">
			<label>Contraseña</label>
			<input type="password" name="password" 
				   placeholder="Tu contraseña (no es obligatorio cambiarlo)">
		</div>
		<div class="campo">
			<input type="submit" class="btn btn-azul" value="Modificar">
		</div>
	</form>
</main>